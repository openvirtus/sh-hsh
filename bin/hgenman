#L:
#h: Usage: $0 [-o DIRECTORY] [-s SECTION] SCRIPT...
#h:
#h: This script helps generating man pages out of your scripts.
##:
hgenman() {
    ## Parse command line arguments.
    local OPTIND output= optopt= ops= arg= ret=0
    while getopts "o:s:" optopt;do # OPTARG
        case $optopt in
            o)  local output="${OPTARG}";;
            s)  HGENMAN_SECTION="${OPTARG}";;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Generate manuals.
    for arg in "$@";do
        if test ! -f "${arg}";then
            echo "hgenman: error: File ${arg} does not exist." >&2
            local ret=1
            continue
        fi
        if test -n "${output}";then
            local manfile="${output}/`basename "${arg}"`.${HGENMAN_SECTION}"
            echo "hgenman: Generating ${manfile} ..." >&2
            hgenman_create "$arg" > "${manfile}"
        else
            hgenman_create "$arg"
        fi
    done
}
hgenman_calc_variables() {
    HGENMAN_SECTION=1
    HGENMAN_VERSION=1.0
    HGENMAN_DATE="`date '+%Y/%m/%d'`"
}
hgenman_create() { # SCRIPT
    local file="${1}"
    local name="`basename "${file}"`"
    printf '.TH man %i "%s" "%s" "%s man page"\n' \
           "${HGENMAN_SECTION}" "${HGENMAN_DATE}" \
           "${HGENMAN_VERSION}" "${name}"
    printf '.nf \n'
    sed -n 's/^ *#h: \{0,1\}/       /p' "${file}" | sed "s|\$0|${name}|g"
    printf '.SH Authors\n'
    sed -n 's/^ *[#\*] *l: *//p' "${file}"
}

## ----------------------------------------------------------------------------
hgenman_calc_variables
if test @"`basename "$0"`" = @"hgenman";then
    if test -n "$1";then
        hgenman "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi

